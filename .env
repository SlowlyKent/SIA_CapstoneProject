#--------------------------------------------------------------------
# Environment Configuration
#--------------------------------------------------------------------

# Set to development for detailed error reporting
CI_ENVIRONMENT = development

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------

# Base URL for the application
app.baseURL = 'http://localhost:8080/SIA_CapstoneProject/public/'

# Force global secure requests (set to false for local development)
app.forceGlobalSecureRequests = false

# Enable/disable CSRF protection
app.CSPEnabled = false

#--------------------------------------------------------------------
# SESSION
#--------------------------------------------------------------------

# Session driver (files, database, redis, memcached)
session.driver = 'CodeIgniter\Session\Handlers\FileHandler'
session.cookieName = 'ci_session'
session.expiration = 7200
session.savePath = null
session.matchIP = false
session.timeToUpdate = 300
session.regenerateDestroy = false

#--------------------------------------------------------------------
# SECURITY
#--------------------------------------------------------------------

# Encryption key - you should change this to a random string
encryption.key = hex2bin:1234567890abcdef1234567890abcdef12345678

